---
interface CardWorkProps {
  date: string;
  location: string;
  icon: any;
  position: string;
  company: string;
  description: string;
}

const { date, location, icon, position, company, description } = Astro.props;
---

<section>
  <aside>
    <h4>{date}</h4>
    <span>{location}</span>
  </aside>
  <figure>
    <div>
      <slot name="icon" />
    </div>
  </figure>
  <article>
    <h3>{position}</h3>
    <h2>{company}</h2>
    <p>{description}</p>
  </article>
</section>

<style>
  section {
    display: flex;
    gap: 20px;
    view-timeline-name: --timeline;
    view-timeline-axis: block;
    animation-timeline: --timeline;
    animation-name: showCard;
    animation-range: entry 25% cover 30%;
    animation-fill-mode: both;
    animation-duration: 1s;
  }

  aside {
    min-width: 120px;
  }
  h3 {
    font-size: 1.3rem;
    color: #5e5e5e;
    margin-bottom: 5px;
    font-weight: 200;
  }
  h4 {
    font-size: 1.2rem;
    color: #5e5e5e;
    white-space: nowrap;
    margin-bottom: 5px;
  }
  p{
    font-weight: 300;
    font-size: 1.2rem;
    line-height: 1.5;
    color: #333;
    margin-bottom: 1rem;
  }
  span {
    font-weight: 300;
    white-space: nowrap;
  }
  figure {
    border-left: 1px solid #5e5e5e;
    width: 0;
  }
  figure div {
    /*trasladar icono 50% a la izq */
    transform: translateX(-50%);
    background-color: #f9f9f9;
    height: 23px;
    width: 23px;
  }

  article {
    display: flex;
    flex-direction: column;
    gap: 5px;
    margin: 0 30px 30px;

    view-timeline-name: --timeline;
    view-timeline-axis: block;
    animation-timeline: --timeline;
    animation-name: showCard5;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
    animation-duration: 1s;
  }

  slot {
    color: red;
  }
  svg {
    width: 50px;
    height: 50px;
    fill: red;
  }

  @media (max-width: 768px) {
    h4,
    span {
      white-space: normal;
      font-size: 1rem;
    }
    aside {
      min-width: 50px;
    }
    article {
      margin: 0 10px 10px;
    }
  }

  @keyframes showIcon {
  }
  @keyframes showCard {
    from {
      opacity: 0;
      transform: translateY(200px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes showCard5 {
    from {
      opacity: 0;
      transform: translatex(100px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }



  @media screen and (max-width: 768px)
  {
    @keyframes showCard5 {
    from {
      opacity: 0;
      transform: translatex(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
   
} 

</style>
