<style>
  svg {
    width: 30px;
    height: 30px;
  }
  .cont-data {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    height: 100%;
  }
  .cont-text {
    max-width: 700px;
    padding: 0 20px;
  }
  h5 {
    font-weight: 100;
    font-size: 2rem;
    color: #000000;
    margin-bottom: 10px;
  }

  h1 {
    font-weight: 900;
    font-size: 3.2rem;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 400;
  }

  p {
    font-weight: 300;
    font-size: 1.2rem;
    line-height: 1.5;
    color: #333;
    margin-bottom: 20px;
  }

  .separator-horizontal {
    border-top: 5px solid #000;
    width: 80px;
    height: 0;
    margin: 20px 0 35px 0;
  }

  /**media */
  @media (max-width: 1000px) {
    .cont-data {
      flex-direction: column;
    }
  }




  /*social icon */
  footer{
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    gap: 10px;
    width: 100%;
}
footer span {
    font-size: 1.2rem;
    font-weight: 300;
    color: #333;
}
footer a {
    background-color: red;
    display: flex;
    align-items: center;
    justify-content: center;

    gap: 10px;
    margin: 5px;
    padding: 5px 10px;
    border-radius: 10px;
    background-color: #f9f9f9;
    transition: all 0.3s ease;
  }
  footer a:hover {
    background-color: #f9f9f9;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    transform: translateY(-5px);
  }



  @media screen and (max-width: 768px)
  {
    footer{
    justify-content: space-evenly;
} 
  }
</style>
