---
const { id, title, number, bg } = Astro.props;
---

<section class={bg === "dark" ? "bg-dark" : "bg-light"} id={id}>
  <aside>
    {number && <h3>{number}</h3>}
    <div></div>
    {title && <h2>{title}</h2>}
  </aside>
  <article>
    <slot />
  </article>
  <aside class="blank"></aside>
</section>

<style>
  section {
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr minmax(100px, 1100px) 1fr;
    min-height: 100vh;
  }
  aside {
    min-width: 100px;
    flex-grow: 1;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  article {
    max-width: 1100px;
    flex-grow: 0;
    padding: 40px 0;
    /*
    background-color: blue;
    background-color: blue;
    */
  }
  h2 {
    font-size: 2rem;
    margin-bottom: 10px;
    font-weight: 700;
    white-space: nowrap;
    color: #999;
    writing-mode: vertical-rl;
    transform: rotate(180deg);
  }
  h3 {
    font-size: 5rem;
    font-weight: 700;
    color: #ccc;
  }
  div {
    border-left: 3px solid #aaa;
    height: 100px;
    margin: 0 0 15px 0;
  }

  .bg-dark {
    background-color: #333;
  }

  .bg-light {
    background-color: #f9f9f9;
  }

  @media (max-width: 768px) {
    section {
      /*
            grid-template-columns: 1fr minmax(100px, 1100px) 5px;
            */

    }
    article {
      padding: 20px 20px 20px 0px;
    }
    aside {
        min-width: 60px;
      justify-content: flex-start;
    }
    .blank {
      display: none;
    }

    h2 {
      font-size: 1.3rem;
    }
    h3 {
      font-size: 3rem;
    }
    div {
      height: 50px;
    }
  }
</style>
